root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,json}]
indent_size = 2
tab_width = 2
indent_style = space

[*.py]
indent_size = 4
tab_width = 4
indent_style = space
ij_continuation_indent_size = 8

[*.{go,mod,sum}]
indent_size = 2
tab_width = 2
indent_style = tab
