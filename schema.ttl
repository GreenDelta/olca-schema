@prefix : <http://openlca.org/> .

@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Entity a rdfs:Class;
	rdfs:comment "The most generic type of the openLCA model";
	.

:Enumeration a rdfs:Class;
	rdfs:comment "Super-class for all enumeration types in openLCA"
	.

:RootEntity a rdfs:Class;
	rdfs:subClassOf :Entity;
	rdfs:comment "A standalone item in a database like a location or unit";
	.

:CategorizedEntity a rdfs:Class;
	rdfs:subClassOf :RootEntity;
	rdfs:comment "A standalone item that can be categorized like a process, flow, etc.";
	.
	
:Category a rdfs:Class;
	rdfs:subClassOf :RootEntity;
	rdfs:comment ""
	.

## Actor ##############################
:Actor a rdfs:Class;
	rdfs:subClassOf :CategorizedEntity;
	rdfs:comment ""
	.

:address a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
	.

:city a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
	.

:country a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
	.

:email a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
    .

:telefax a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
	.

:telephone a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
	.

:website a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
	.

:zipCode a rdf:Property;
	rdfs:domain :Actor;
	rdfs:range xsd:string;
	rdfs:comment ""
	.

## AllocationFactor #############

:AllocationFactor a rdfs:Class;
	rdfs:subClassOf :Entity;
	rdfs:comment ""
	.

:productExchange a rdf:Property;
	rdfs:domain :AllocationFactor;
	rdfs:range :Exchange;
	rdfs:comment ""
	.

:allocationType a rdf:Property;
	rdfs:domain :AllocationFactor;
	rdfs:range [ a owl:Class; owl:unionOf (:CAUSAL :ECONOMIC :PHYSICAL) ];
	rdfs:comment ""
	.

:value a rdf:Property;
	rdfs:domain :AllocationFactor;
	rdfs:range xsd:decimal;
	rdfs:comment ""
	.

:allocatedExchange a rdf:Property;
	rdfs:domain :AllocationFactor;
	rdfs:range :Exchange;
	rdfs:comment ""
	.

## AllocationMethod ##################
:AllocationMethod a rdfs:Class;
    rdfs:subClassOf :Enumeration;
    rdfs:comment ""
	.

:CAUSAL a rdfs:Class;
    rdfs:subClassOf :AllocationMethod;
    rdfs:comment ""
	.

:ECONOMIC a rdfs:Class;
    rdfs:subClassOf :AllocationMethod;
    rdfs:comment ""
	.

:PHYSICAL a rdfs:Class;
    rdfs:subClassOf :AllocationMethod;
    rdfs:comment ""
	.

#########

:Unit a rdfs:Class;
	rdfs:subClassOf :RootEntity;
	rdfs:comment ""
	.
	
:FlowPropertyFactor a rdfs:Class;
	rdfs:subClassOf :Entity;
	rdfs:comment "A conversion factor between two flow properties of a flow.";
	.
	
## data properties

:refId a rdf:Property;
	rdfs:comment "The reference ID (UUID) of a root entity.";
	rdfs:domain :RootEntity;
	rdfs:range xsd:string;
	.

:name a rdf:Property;
	rdfs:comment "The name of an entity.";
	rdfs:domain :RootEntity;
	rdfs:range xsd:string;
	.	
	
:description a rdf:Property;
	rdfs:comment "The description of an entity.";
	rdfs:domain :RootEntity;
	rdfs:range xsd:string;
	.

:conversionFactor a rdf:Property;
	rdfs:comment "A factor for converting the amounts of entities of the same type.";
	rdfs:domain [ a owl:Class; owl:unionOf (:FlowPropertyFactor :Unit) ];
	rdfs:range xsd:decimal;
	.
	
:synonyms a rdf:Property;
	rdfs:comment "A list of synonyms for the name of an entity separated by semicolons.";
	rdfs:domain :Unit;
	rdfs:range xsd:string;
	.

:childCategories a rdf:Property;
	rdfs:comment "";
	rdfs:domain :Category;
	rdfs:range rdf:List;
	.
	
